  <div class='content'>
    <div class='left-hero'>
      <div class='text'>
        <h4>Your</h4>
        <h4>Favorite</h4>
        <h4 class='purple-text'>Open</h4>
        <h4 class='purple-text'>Source</h4>
        <div class='last'>
          <h4 class='community'></h4><div class='blink'></div>
        </div>
      </div>
      <h1>FearlessTech</h1>
    </div>
    <div class='right-hero'>
      <div class='img-wrapper'>
        <img src='public/images/hero_image.png' alt='Wolf Silhouette' />
      </div>
    </div>
  </div>
</div>
