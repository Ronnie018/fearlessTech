---
import { hero_styles } from '../../styles/colors';
---

<style
  lang='scss' 
  define:vars={{
    GREEN_HERO_TEXT: hero_styles.GREEN_HERO_TEXT,
    PURPLE_HERO_TEXT: hero_styles.PURPLE_HERO_TEXT,
    ft_purple: hero_styles.FEARLESSTECH_PURPLE,
    ft_cyan: hero_styles.FEARLESSTECH_CYAN,
  }}
>
  .hero {
    min-height: 100vh;
    background-position: center;
    * {
      color: white;
      box-sizing: border-box;
    }

    .content {
      padding: 2rem 6rem;
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;

      .right-hero {
        min-height: 100vh;
        display: flex;
        width: 100%;
        justify-content: flex-end;
        position: absolute;
        top: 0;
        left: 0;
        padding: 2rem 10rem;

        .img-wrapper {
          top: 0;
          right: 0;
          width: 70vh;
          max-width: 600px;
          img {
            width: 85%;
            animation: float alternate infinite 2000ms ease-in-out;

            @keyframes float {
              from {
                transform: translateY(25px);
              }
              to {
                transform: translateY(45px);
              }
            }
          }
        }
      }
      .left-hero {
        z-index: 50;
        display: flex;
        flex-direction: column;
        justify-content: center;
        row-gap: 2rem;
        min-height: 100vh;
        margin-left: 10rem;
        .last {
          display: flex;
          .community {
            &::after {
              transition: 0ms ease-in-out;
              content: 'Community';
              animation: write 7000ms infinite 3s ease-in-out;
            }
            @keyframes write {
              0% {
                content: 'C';
              }
              2% {
                content: 'Co';
              }
              4% {
                content: 'Com';
              }
              6% {
                content: 'Comm';
              }
              8% {
                content: 'Commu';
              }
              10% {
                content: 'Commun';
              }
              12% {
                content: 'Communi';
              }
              14% {
                content: 'Communit';
              }
              16% {
                content: 'Community';
              }
              90% {
                content: 'Community';
              }
              98% {
                transition: 0ms;
                background-color: green;
              }
              100% {
                content: 'Community';
              }
            }
          }
        }
        h1 {
          font-weight: 900;
          font-size: 100px;
          font-family: 'Righteous', cursive;
          background: linear-gradient(var(--ft_purple), var(--ft_cyan));
          -webkit-background-clip: text;
          -webkit-text-fill-color: transparent;
          letter-spacing: 5px;
        }
        .text {
          display: flex;
          flex-direction: column;
          row-gap: 0.6rem;
          margin-bottom: 1rem;
          h4 {
            display: block;
            font-weight: 300;
            font-size: 54px;
            color: var(--GREEN_HERO_TEXT);
            margin-left: 3rem;
            &.purple-text {
              color: var(--PURPLE_HERO_TEXT);
            }
          }
          .blink {
            width: 5px;
            height: 50px;
            background-color: white;
            animation: blink 1s infinite;
            @keyframes blink {
              0% {
                opacity: 0;
              }
              49% {
                opacity: 0;
              }
              50% {
                opacity: 1;
              }
            }
          }
        }
      }
    }
  }
</style>

<div class='hero'>
